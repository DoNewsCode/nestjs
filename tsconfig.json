{
  "compilerOptions": {
    "module": "commonjs",

    "declaration": false,
    "sourceMap": true,
    "removeComments": true,

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2018",
    "noLib": false,
    "lib": ["ESNext"],
    "outDir": "dist",

    "allowJs": true,
    "noImplicitAny": false,
    "noUnusedLocals": false
  },
  "include": ["packages/**/*", "integration/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
