{
  "compilerOptions": {
    "module": "commonjs",

    "declaration": true,
    "sourceMap": true,
    "removeComments": false,

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noLib": false,
    "target": "ES2017",

    "allowJs": false,
    "strict": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "noUnusedLocals": false
  },
  "exclude": ["../node_modules", "./**/*.spec.ts"]
}
